<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.aisandbox.client.fx.GameOptionsController">
    <top>
        <Label text="Select Game Options" BorderPane.alignment="CENTER"/>
    </top>
    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <Button layoutX="14.0" layoutY="8.0" mnemonicParsing="false" onAction="#lastAction"
                        text="%ui.button.back" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0"
                        AnchorPane.topAnchor="8.0"/>
                <Button fx:id="nextButton" disable="true" mnemonicParsing="false" onAction="#nextAction"
                        text="%ui.button.next" AnchorPane.bottomAnchor="8.0" AnchorPane.rightAnchor="8.0"
                        AnchorPane.topAnchor="8.0"/>
            </children>
        </AnchorPane>
    </bottom>
    <center>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0" HBox.hgrow="SOMETIMES">
                    <children>
                        <Label text="Options"/>
                        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308"
                                    maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="optionsBox"/>
                            </content>
                        </ScrollPane>
                    </children>
                    <padding>
                        <Insets left="4.0" right="2.0"/>
                    </padding>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="2.0" HBox.hgrow="SOMETIMES">
                    <children>
                        <Label text="Agents"/>
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0"
                                    VBox.vgrow="ALWAYS">
                            <content>
                                <ListView fx:id="agentList" onMouseClicked="#clickAgentList" prefHeight="200.0"
                                          prefWidth="200.0"/>
                            </content>
                        </ScrollPane>
                        <FlowPane alignment="TOP_RIGHT" hgap="2.0">
                            <children>
                                <Button fx:id="removeAgentButton" disable="true" mnemonicParsing="false"
                                        onAction="#removeAgentEvent" text="Remove Agent"/>
                                <Button fx:id="editAgentButton" mnemonicParsing="false" onAction="#editAgentAction"
                                        text="Edit Agent"/>
                                <Button fx:id="addAgentButton" mnemonicParsing="false" onAction="#addAgentAction"
                                        text="Add Agent"/>
                            </children>
                        </FlowPane>
                        <Label text="Output">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <GridPane hgap="2.0" vgap="1.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Output Type"/>
                                <ChoiceBox fx:id="outputType" maxWidth="1.7976931348623157E308" prefWidth="150.0"
                                           GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                                <Label text="Output Directory" GridPane.rowIndex="1"/>
                                <TextField fx:id="outputDirectory" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Button fx:id="outputDirectoryButton" mnemonicParsing="false" text="Button"
                                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets left="2.0" right="4.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
