<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.aisandbox.client.fx.GameRunController">
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="200.0" VBox.vgrow="NEVER">
                    <children>
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <PieChart fx:id="durationGraph" animated="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="300.0" title="Average Step Duration" HBox.hgrow="NEVER" />
                  <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="300.0" spacing="4.0" HBox.hgrow="SOMETIMES">
                     <children>
                        <Label fx:id="startTimeField" text="Start Time : N/A" />
                        <Label fx:id="runningField" text="Simulation Running : N/A" />
                        <Label fx:id="stepCountField" text="Steps: N/A" />
                     </children>
                     <padding>
                        <Insets top="4.0" />
                     </padding>
                  </VBox>
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <AnchorPane VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" text="%ui.button.back" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.topAnchor="8.0" />
                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonAction" text="%ui.button.start" AnchorPane.bottomAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </bottom>
    <center>
        <AnchorPane minHeight="100.0" BorderPane.alignment="CENTER">
            <children>
                <Pane fx:id="imageAnchor" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
