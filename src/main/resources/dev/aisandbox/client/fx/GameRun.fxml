<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.StackedBarChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.aisandbox.client.fx.GameRunController">
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER">
                    <children>
                        <LineChart fx:id="rewardGraph" title="Reward">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT"/>
                            </yAxis>
                        </LineChart>
                        <StackedBarChart fx:id="responseGraph">
                            <xAxis>
                                <CategoryAxis fx:id="responseChartXAxis" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="responseChartYAxis" side="LEFT"/>
                            </yAxis>
                        </StackedBarChart>
                    </children>
                </HBox>
                <AnchorPane VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction"
                                text="%ui.button.back" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0"
                                AnchorPane.topAnchor="8.0"/>
                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonAction"
                                text="Start Simulation" AnchorPane.bottomAnchor="8.0" AnchorPane.rightAnchor="8.0"
                                AnchorPane.topAnchor="8.0"/>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </bottom>
    <center>
        <AnchorPane fx:id="imageAnchor" minHeight="100.0" BorderPane.alignment="CENTER">
            <children>
                <Pane fx:id="imageAnchor" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0"
                      AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"/>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
